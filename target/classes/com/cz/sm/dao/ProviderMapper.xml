<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cz.sm.dao.ProviderMapper">
    <select id="findAllPro" resultType="Providers">
        SELECT id,proCode,proName,proContact,proPhone,proAddress,proFax,creationDate FROM smbms_provider
        <where>
        <if test="queryProCode!=null">
            and proCode like "%"#{queryProCode}"%"
        </if>
        <if test="queryProName!=null">
            and proName like "%"#{queryProName}"%"
        </if>
        </where>
    </select>
    <select id="findById" parameterType="Long" resultType="Providers">
        SELECT id,proCode,proName,proContact,proPhone,proDesc,proFax,proAddress FROM smbms_provider where id=#{proId}
    </select>
    <update id="updateById" parameterType="Providers">
        update smbms_provider set proCode=#{proCode},proName=#{proName},proContact=#{proContact},proPhone=#{proPhone},proAddress=#{proAddress},proFax=#{proFax},proDesc=#{proDesc} WHERE id=#{id}
    </update>
    <delete id="delById" parameterType="Long">
        delete from smbms_provider where id=#{proId}
    </delete>
    <insert id="saveByPro" parameterType="Providers">
        insert into smbms_provider (proCode,proName,proContact,proPhone,proAddress,proFax,proDesc,creationDate) values (#{proCode},#{proName},#{proContact},#{proPhone},#{proAddress},#{proFax},#{proDesc},#{creationDate})
    </insert>
</mapper>